# Healthcare Facility Planning - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# FLASK BACKEND CONFIGURATION
# =============================================================================

# Flask environment (development, production, testing)
FLASK_ENV=development

# Secret key for Flask sessions (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=your-secret-key-here

# Flask debug mode (True for development, False for production)
FLASK_DEBUG=True

# Flask port
FLASK_PORT=5000


# =============================================================================
# DATABASE CONFIGURATION (Supabase)
# =============================================================================

# Supabase project URL (e.g., https://your-project.supabase.co)
SUPABASE_URL=https://your-project.supabase.co

# Supabase anon/public key (safe to expose in frontend)
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (KEEP SECRET! Server-side only)
# Used for backend operations that bypass RLS
SUPABASE_SERVICE_KEY=your-service-role-key-here


# =============================================================================
# LLM / AI CONFIGURATION
# =============================================================================

# Option 1: OpenAI API (if using GPT-3.5/GPT-4)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Option 2: Hugging Face API (if using hosted models)
HUGGINGFACE_API_KEY=hf_your-huggingface-token-here
HUGGINGFACE_MODEL=microsoft/phi-2

# LLM Configuration
LLM_PROVIDER=openai  # Options: openai, huggingface, local
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.7


# =============================================================================
# GOOGLE EARTH ENGINE
# =============================================================================

# Google Earth Engine service account email
GEE_SERVICE_ACCOUNT=your-service-account@your-project.iam.gserviceaccount.com

# Path to GEE service account JSON key file
GEE_CREDENTIALS_PATH=./credentials/gee-service-account.json


# =============================================================================
# GOOGLE CLOUD PLATFORM (for deployment)
# =============================================================================

# GCP Project ID
GCP_PROJECT_ID=your-gcp-project-id

# GCP Region
GCP_REGION=us-central1

# Cloud Storage bucket for satellite imagery
GCS_BUCKET_NAME=healthcare-facility-planning-images


# =============================================================================
# API KEYS (External Services)
# =============================================================================

# Google Maps API (for road network data if using Google instead of OSM)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# OpenStreetMap Overpass API endpoint (default: public endpoint)
OSM_OVERPASS_URL=http://overpass-api.de/api/interpreter


# =============================================================================
# DATA SOURCES
# =============================================================================

# WorldPop population data path (local file)
WORLDPOP_DATA_PATH=./data/rwa_ppp_2020_1km_Aggregated.tif

# Rwanda boundary GeoJSON path
RWANDA_BOUNDARY_PATH=./data/rwanda_boundary.geojson

# Healthcare facilities data source
HEALTHCARE_FACILITIES_SOURCE=osm  # Options: osm, manual, database


# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Path to trained ML model
ML_MODEL_PATH=./models/healthcare_model.pkl

# Model version tracking
ML_MODEL_VERSION=v1.0

# Feature extraction configuration
SATELLITE_PATCH_SIZE=256
SATELLITE_STRIDE=256


# =============================================================================
# HSSP V TARGETS (Rwanda Health Sector Strategic Plan)
# =============================================================================

# WHO/HSSP V target: maximum travel time to nearest health facility (minutes)
HSSP_TARGET_TRAVEL_TIME=25

# Target population coverage percentage
HSSP_TARGET_COVERAGE=95

# Target facility density per 10,000 people
HSSP_TARGET_FACILITY_DENSITY=5


# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================

# Redis connection (if using Redis for caching)
REDIS_URL=redis://localhost:6379/0

# Enable caching
ENABLE_CACHE=True

# Cache TTL (seconds)
CACHE_TTL=3600


# =============================================================================
# SECURITY
# =============================================================================

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# JWT secret key (if implementing custom JWT auth)
JWT_SECRET_KEY=your-jwt-secret-key-here

# JWT expiration time (hours)
JWT_EXPIRATION_HOURS=24


# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=./logs/app.log

# Sentry DSN (for error tracking - optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id


# =============================================================================
# FRONTEND CONFIGURATION (React)
# =============================================================================

# API base URL (where Flask backend is running)
REACT_APP_API_URL=http://localhost:5000

# Supabase configuration (for frontend)
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-anon-key-here

# Map configuration
REACT_APP_MAP_CENTER_LAT=-1.9403
REACT_APP_MAP_CENTER_LNG=29.8739
REACT_APP_MAP_DEFAULT_ZOOM=8


# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable debug toolbar
ENABLE_DEBUG_TOOLBAR=False

# Enable API documentation (Swagger/OpenAPI)
ENABLE_API_DOCS=True

# Enable profiling
ENABLE_PROFILING=False
